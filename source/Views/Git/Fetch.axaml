<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FlameControl.Views.Git.Fetch">
    <StackPanel Orientation="Vertical" Margin="8, 0">
        <TextBlock Classes="Bold" FontSize="18" Text="Init Repository" HorizontalAlignment="Center"></TextBlock>

        <Grid Margin="8, 16, 8, 0" RowDefinitions="40, 40" ColumnDefinitions="Auto, *">
            <!-- Remote -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0, 0, 8, 0"
                       Text="Remote:">
            </TextBlock>

            <ComboBox Grid.Row="0" Grid.Column="1"></ComboBox>

            <!-- Fetch All -->
            <TextBlock Grid.Row="1" Grid.Column="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Margin="0, 0, 8, 0"
                       Text="Fetch all remotes:">
            </TextBlock>

            <CheckBox Grid.Row="1" Grid.Column="1"></CheckBox>
        </Grid>
    </StackPanel>
</UserControl>